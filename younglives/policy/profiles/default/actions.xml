<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <object name="object" meta_type="CMF Action Category">
        <object name="portlets" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Portlets</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string: ${object_url}/@@manage-portlets</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:member is not None</property>
            <property name="permissions">
                <element value="Portlets: Manage portlets"/>
            </property>
            <property name="visible">True</property>
        </object>
        <object name="users" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Users</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string: ${object_url}/users-settings</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:object.id=='intranet'</property>
            <property name="permissions">
                <element value="Manage portal"/>
            </property>
            <property name="visible">True</property>
        </object>
    </object>
    
    <object name="site_actions" meta_type="CMF Action Category" purge="True">
        <object name="settings" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Settings</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:${globals_view/navigationRootUrl}/plone_control_panel</property>
            <property name="icon_expr"></property>
            <property name="available_expr"></property>
            <property name="permissions">
                <element value="Manage portal" />
            </property>
            <property name="visible">True</property>
        </object>
        <object name="recent" meta_type="CMF Action"
            i18n:domain="plone">
            <property name="title" i18n:translate="">Recent changes</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:${globals_view/navigationRootUrl}/recently_modified</property>
            <property name="icon_expr"></property>
            <property name="available_expr"></property>
            <property name="permissions">
                <element value="Manage portal" />
            </property>
            <property name="visible">True</property>
        </object>
        <object name="logout" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Log out</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:${globals_view/navigationRootUrl}/logout</property>
            <property name="icon_expr"></property>
            <property name="available_expr">python:member is not None</property>
            <property name="permissions">
                <element value="View" />
            </property>
            <property name="visible">True</property>
        </object>
        <object name="intranet" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Staff Intranet</property>
            <property name="description" i18n:translate=""></property>
            <property name="url_expr">string:${globals_view/navigationRootUrl}/intranet</property>
            <property name="icon_expr"></property>
            <property name="available_expr" />
            <property name="permissions">
                <element value="View" />
            </property>
            <property name="visible">True</property>
        </object>
    </object>

</object>