<?xml version="1.0"?>

<portlets 
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="younglives.policy">

    <!-- reassigned portlets -->
    <portlet addview="portlets.Navigation" remove="True" />
    <portlet title="Navigation" addview="portlets.Navigation"
        description="A portlet which can render a navigation tree">
        <for interface="plone.app.portlets.interfaces.ILeftColumn" />
    </portlet>
    <assignment name="navigation" category="context"
        key="/" manager="plone.leftcolumn" type="portlets.Navigation">
        <property name="topLevel">0</property>
    </assignment>
        
    <portlet addview="portlets.Calendar" remove="True" />
    <portlet addview="portlets.Classic" remove="True" />
    <portlet addview="plone.portlet.collection.Collection" remove="True" />
    <portlet addview="portlets.Events" remove="True" />
    <portlet addview="portlets.Language" remove="True" />
    <portlet addview="portlets.Login" remove="True" />
    <portlet addview="portlets.News" remove="True" />
    <portlet addview="portlets.Recent" remove="True" />
    <portlet addview="portlets.Review" remove="True" />
    <portlet addview="portlets.rss" remove="True" />
    <portlet addview="portlets.Search" remove="True" />

</portlets>
