<div id="portal-breadcrumbs"
     i18n:domain="plone"
     tal:condition="view/breadcrumbs">

    <ul class="breadcrumbs">
        <li>
            <a i18n:translate="tabs_home" 
               tal:attributes="href view/navigation_root_url"
               >Home &raquo;</a>
        </li>
        <tal:block tal:repeat="crumb view/breadcrumbs"
            tal:attributes="dir python:view.is_rtl and 'rtl' or 'ltr'">
            <tal:last tal:define="is_last repeat/crumb/end">
                <li tal:condition="python:not is_last">
                    <a href="#"
                        tal:omit-tag="not: crumb/absolute_url"
                        tal:attributes="href crumb/absolute_url">
                        <span tal:replace="crumb/Title" /> &raquo;
                    </a>
                </li> 
                <li class="last" tal:condition="is_last"
                    tal:content="crumb/Title">crumb</li>
            </tal:last>
        </tal:block>
    </ul>
    
</div>
